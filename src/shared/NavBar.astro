---
const links = [
    { href: '/', label: 'home' },
    { href: '/pokemons/1', label: 'Listado' },
    { href: '/favorites', label: 'Favoritos' },
];

const currentPath = Astro.url.pathname;
---

<!-- component -->
<nav class="shadow bg-slate-900 ">
    <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
        
        <!-- {
            links.map((link) => (
                <a href={link.href} class:list={[
                    "text-gray-800 dark:text-gray-200  mx-1.5 sm:mx-6",
                    {
                        'border-b-2 border-blue-500': currentPath === link.href,
                        'border-transparent': currentPath !== link.href,
                    }
                    ]}>
                    {link.label}
                </a>
            ))
        }  -->

        {
            links.map((link) => (
                <div>
                    <a href={link.href} class="text-gray-800 dark:text-gray-200  mx-1.5 sm:mx-6">
                        {link.label}
                    </a>
                    {currentPath === link.href ? (
                        // Si el link es el actual, se agrega una l√≠nea debajo
                        <div 
                            transition:name="menu-line"
                            class="border-b-2 border-blue-500 mx-5" />
                            
                        ) : (
                            <div class="border-b-2 border-transparent" />
                        )}  
                </div>
            ))
        }
    </div>
</nav>